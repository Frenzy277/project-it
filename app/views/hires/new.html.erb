<div class="wrapper">
  <%= render 'shared/content_title', title: "Hire a user for your project" %>

  <%= form_tag project_hires_path(@project), class: "form-horizontal", role: "form" do %>
    <div class="row">

      <div class="form-group">
        <%= label_tag :username, nil, class: "col-sm-4 control-label" %>
        <div class="col-sm-4">
          <%=  text_field_tag :username, params[:username] || '', class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-4 col-sm-offset-4">
        <%= submit_tag "Hire", class: "btn btn-primary form-control" %>
      </div>
    </div>
  <% end %>

</div>