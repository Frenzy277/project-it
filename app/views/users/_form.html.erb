<%= form_for @user, html: { class: "form-horizontal", role: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :username, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :username, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :time_zone, class: "col-sm-4 control-label" %>
    <div class="col-sm-4">
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, { default: Time.zone.name }, { class: "form-control" } %>
    </div>
  </div>

  <div class="col-sm-4 col-sm-offset-4">
    <%= f.submit (@user.new_record? ? "Register" : "Update Profile"), class: "btn btn-primary form-control", role: "button" %>
  </div>
  
  <div class="clearfix"></div>
<% end %>