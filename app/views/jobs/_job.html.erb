<% show_buttons ||= "yes" %>
<% row_disappear ||= "no" %>
<tr id="job-row-<%= job.id %>">
  <td><%= job.id %></td>
  <td><%= job.job_name %></td>
  <td><%= job.description %></td>
  <td>
    <span class="pull-left" id="job-status-<%= job.id %>">
      <%= job.status %>
    </span>
    <span class="pull-right">
      <%= link_to "Mark as completed", done_project_job_path(job.project, job, row_disappear: row_disappear), class: "label label-warning", role: "button", method: "post", remote: true %>
    </span>
    <div class="clearfix"></div>
  </td>
  <td><%= pretty_date(job.deadline) %></td>

  <% if (current_user == job.project.manager) || show_buttons == "yes" %>
  <td>
    <div class='panel'>
      <%= link_to "Edit", edit_project_job_path(job.project, job), class: "badge" %>
      <%= link_to "Delete", project_job_path(job.project, job), method: "delete", remote: true, class: "badge" %>
    </div>
  </td>
  <% end %>
</tr>