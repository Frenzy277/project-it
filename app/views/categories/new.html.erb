<div class="wrapper">
  <%= render 'shared/content_title', title: "Create a new category" %>
  <%= render 'shared/errors', obj: @category %>

  <%= form_for @category, html: { class: "form-horizontal", role: "form" } do |f| %>
    <div class="form-group">
      <%= f.label :name, class: "col-sm-4 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-4 col-sm-offset-4">
      <%= f.submit class: "btn btn-primary form-control", role: "button" %>
    </div>
    
    <div class="clearfix"></div>
  <% end %>

</div>