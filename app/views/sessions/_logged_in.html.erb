<% if current_user.admin? %>
  <li><%= link_to "New category", new_category_path %></li>
<% end %>
<li>
  <%= link_to messages_path do %>
    Messages <span class="glyphicon glyphicon-envelope"></span>

    <!-- widget for new messages -->
    <% if current_user.unviewed_messages? %>
      <span class="badge badge-heart"><%= current_user.total_unviewed_messages %></span>
    <% end %>

  <% end %>
</li>

<li class="dropdown">
  <%= link_to "#", class: "dropdown-toggle", role: "button", data: { toggle: "dropdown" }, "aria-expanded" => false do %>
    Projects <span class="glyphicon glyphicon-collapse-down"></span>
  <% end %>
  <ul class="dropdown-menu" role="menu">
    <li>
      <%= link_to projects_path do %>
        <span class="glyphicon glyphicon-list"></span> <strong>All projects</strong>
      <% end %>
    </li>
    <li>
      <%= link_to user_projects_path do %>
        <span class="glyphicon glyphicon-list-alt"></span> <strong>My portfolio</strong> <span class="badge pull-right"><%= current_user.total_projects %></span>
      <% end %>
    </li>
    <li>
      <%= link_to user_jobs_path do %>
        <span class="glyphicon glyphicon-tasks"></span> <strong>My jobs</strong><span class="badge pull-right" id="jobs_count"><%= current_user.total_jobs_in_progress %></span>
      <% end %>
    </li>
    <li class="divider"></li>
    <li>
      <%= link_to new_project_path do %>
        <span class="glyphicon glyphicon-plus"></span> <strong>Create a project</strong>
      <% end %>
    </li>
  </ul>
</li>


<li class="dropdown">
  <%= link_to "#", class: "dropdown-toggle", role: "button", data: { toggle: "dropdown" }, "aria-expanded" => false do %>
    <%= current_user.username %>  <span class="glyphicon glyphicon-collapse-down"></span>
  <% end %>
  <ul class="dropdown-menu" role="menu">
    <li>
      <%= link_to user_path(current_user) do %>
        <span class="glyphicon glyphicon-user"></span> <strong>Profile</strong>
      <% end %>
    </li>
    <li>
      <%= link_to edit_user_path(current_user) do %>
        <span class="glyphicon glyphicon-edit"></span> <strong>Settings</strong>
      <% end %>
    </li>
    <li class="divider"></li>
    <li>
      <%= link_to logout_path do %>
        <span class="glyphicon glyphicon-log-out"></span> <strong>Logout</strong>
      <% end %>
    </li>
  </ul>
</li>


